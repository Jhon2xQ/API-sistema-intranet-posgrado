spring.application.name=intranet

# Configuracion de la base de datos
spring.datasource.url=jdbc:sqlserver://localhost:1433;databaseName=;encrypt=true;trustServerCertificate=true

spring.datasource.username=
spring.datasource.password=

# Driver de SQL Server
spring.datasource.driver-class-name=com.microsoft.sqlserver.jdbc.SQLServerDriver

# Configuracion de JPA (Solo lectura, sin cambios en la BD)
spring.jpa.hibernate.ddl-auto=none
spring.jpa.show-sql=true

# Dialecto para SQL Server
spring.jpa.database-platform=org.hibernate.dialect.SQLServerDialect

spring.jpa.hibernate.naming.physical-strategy=org.hibernate.boot.model.naming.PhysicalNamingStrategyStandardImpl

#JWT
app.jwt.secret = "your-secret-key"
app.jwt.access-expiration = 900000
app.jwt.refresh-expiration = 86400000

#COOKIE
app.cookie.domain=localhost
app.cookie.secure=false
app.cookie.same-site=None
app.cookie.access-max-age=900
app.cookie.refresh-max-age=86400
app.cookie.path=/api/auth/refresh